<%= form_with(model: [@event, @invitation], url: event_invitations_path(@event), local: true) do |form| %>
    <%= form.hidden_field :event_id, value: @event.id %>
    <%= form.label :recipient_email %>
    <%= form.email_field :recipient_email %>
    <%= form.submit %>
  <% end %>
  <%= form_with(model: @invitation, url: invitations_path, method: :post) do |f| %>
    <%= f.hidden_field :event_id, value: @event.id %>
    <%= f.hidden_field :recipient_id, value: @recipient.id %>
    <%= f.submit 'Send Invitation' %>
  <% end %>
  