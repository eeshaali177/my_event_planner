<%= form_with(model: @invitation, url: event_invitations_path(@event), local: true) do |form| %>
    <div>
      <%= form.label :recipient_id, "Recipient ID" %>
      <%= form.text_field :recipient_id %>
    </div>
  
    <!-- Include additional form fields here if needed -->
  
    <%= form.hidden_field :event_id, value: @event.id %>
    <%= form.hidden_field :sender_id, value: current_user.id %>
  
    <div>
      <%= form.submit "Send Invitation" %>
    </div>
  <% end %>
  