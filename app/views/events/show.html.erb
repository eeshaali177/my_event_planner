<p style="color: green"><%= notice %></p>

<%= render @event %>

<div>
  <%= link_to "Edit this event", edit_event_path(@event) %> |
  <%= link_to "Back to events", events_path %>

  <%= button_to "Destroy this event", @event, method: :delete %>
</div>


<h1><%= @event.title %></h1>
<p><%= @event.description %></p>
<p>Date: <%= @event.date %></p>
<p>Time: <%= @event.time %></p>
<p>Location: <%= @event.location %></p>

<h2>Attendees:</h2>
<ul>
  <% @event.attendees.each do |attendee| %>
    <li><%= attendee.email %></li>
  <% end %>
</ul>

<h2>Invited Users:</h2>
<ul>
  <% @event.invitations.each do |invitation| %>
    <li><%= invitation.recipient.email %></li>
  <% end %>
</ul>
<%= link_to 'Create Invitation', new_event_invitation_path(@event), class: 'btn btn-primary' %>
<%= render partial: 'invitations/form', locals: { invitation: @invitation } %>
